<Window x:Class="Task_2_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter month number (1-12):" Margin="0 0 0 10" />
            <TextBox x:Name="inputTextBox" Width="100" />
            <Button Content="Calculate" Click="CalculateButton_Click" Width="100" Margin="0 10 0 0" />
            <TextBlock x:Name="resultTextBlock" Margin="0 20 0 0" />
        </StackPanel>
    </Grid>
</Window>
