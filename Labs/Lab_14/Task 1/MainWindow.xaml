<Window x:Class="Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Date (ДДММРРРР):"/>
            <TextBox Name="DateTextBox"/>
            <TextBlock Text="Time (ГГ:ХХ:СС):"/>
            <TextBox Name="TimeTextBox"/>
            <Button Content="Calculate Expiration" Click="CalculateExpiration_Click"/>
            <TextBlock Name="ResultLabel" Margin="0,10,0,0"/>
            <TextBlock Name="DayOfWeekLabel"/>
        </StackPanel>
    </Grid>
</Window>
