<Window x:Class="Task_2._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2._4"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200">
    <StackPanel>
        <Label Content="Enter str: " />
        <TextBox x:Name="InputText1" Width="200" Height="50" />
        <Label Content="Output: " />
        <TextBox x:Name="OutputText" Width="200" Height="50" IsReadOnly="True" />
        <Button x:Name="FuncButton" Content="Func" Click="FuncButton_Click" />
    </StackPanel>
</Window>
