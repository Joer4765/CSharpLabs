<Window x:Class="Task_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Processing App" Height="450" Width="400">
    <StackPanel>
        <!-- Button to process the input file -->
        <Button Content="Process file" Height="20" Width="100" Name="ProcessFileButton" Click="ProcessFileButton_Click" IsEnabled="False"/>
        <!-- Button to quit the application -->
        <Button Content="Quit" Height="20" Width="100" Click="QuitButton_Click"/>
        <!-- Label to display the output -->
        <Label Name="OutputLabel"/>
    </StackPanel>
</Window>