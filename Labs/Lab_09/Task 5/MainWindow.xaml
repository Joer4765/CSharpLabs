<Window x:Class="Task_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <RadioButton x:Name="rbAdd" Content="Add" Margin="10"/>
            <RadioButton x:Name="rbSubtract" Content="Subtract" Margin="10"/>
            <RadioButton x:Name="rbMultiply" Content="Multiply" Margin="10"/>
            <RadioButton x:Name="rbDivide" Content="Divide" Margin="10"/>
            <Button Content="Calculate" Margin="10" Click="Button_Click"/>
            <TextBlock x:Name="tbResult" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>