<Window x:Class="Task_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel>
        <Label Content="Enter name 1:"/>
        <TextBox x:Name="InputText1" Width="300" Height="50"/>
        <Label Content="Enter name 2:"/>
        <TextBox x:Name="InputText2" Width="300" Height="50"/>
        <Label Content="Output:"/>
        <TextBox x:Name="OutputText" Width="300" Height="50"/>
        <Button x:Name="FuncButton" Content="Ship" Click="FuncButton_Click"/>
    </StackPanel>
</Window>
