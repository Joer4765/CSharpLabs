<Window x:Class="Task_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Vertex:" VerticalAlignment="Center"/>
            <TextBox x:Name="VertexEntry" Width="100" VerticalAlignment="Center"/>
            <TextBlock Text="Neighbors:" VerticalAlignment="Center"/>
            <TextBox x:Name="NeighborsEntry" Width="150" VerticalAlignment="Center"/>
            <Button Content="Add Edge" Click="AddEdge_Click" Width="100" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Graph Info" FontWeight="Bold"/>
        <TextBox x:Name="OutputText" TextWrapping="Wrap" Width="350" Height="150"/>
        <Button Content="Show Graph Info" Click="ShowGraphInfo_Click" Width="150" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
