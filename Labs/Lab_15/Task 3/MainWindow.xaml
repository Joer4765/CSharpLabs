<Window x:Class="Task_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400">
    <StackPanel>
        <Label Content="Footballers Surnames" Margin="10" />
        <TextBox x:Name="InDataBox" Margin="10" Height="200" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"></TextBox>
        <Button Content="Process Data" Click="ProcessData_Click" Margin="10"></Button>
        <Label Content="Footballers Group 1" Margin="10" />
        <TextBlock x:Name="Group1DataLabel" TextWrapping="WrapWithOverflow" Margin="10"/>
        <Label Content="Footballers Group 2" Margin="10" />
        <TextBlock x:Name="Group2DataLabel" TextWrapping="WrapWithOverflow" Margin="10"/>
    </StackPanel>
</Window>