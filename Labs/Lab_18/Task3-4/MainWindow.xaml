<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1300">
    <Grid>
        <Button Content="Process File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,30,0,0" Click="ProcessFileButton_Click"/>
        <Button Content="Read Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="430,30,0,0" Click="ReadDataButton_Click"/>
        <Button Content="Process File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,30,0,0" Click="ProcessFileButton_Click"/>
        
        <TextBox x:Name="DataTextBox" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="900" Margin="10,70,0,0"/>
        <TextBox x:Name="ResultsTextBox" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="900" Margin="550,70,0,0"/>
        <TextBlock x:Name="CountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="150" Margin="1100,70,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
