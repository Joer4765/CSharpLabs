<Window x:Class="Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <StackPanel>
        <Label Content="Arr" HorizontalAlignment="Center"></Label>
        <TextBox Width="300" AcceptsReturn="True" TextWrapping="Wrap" 
                 Text="{Binding Path=Arr, Mode=TwoWay}"></TextBox>
        
        <Label Content="Result" HorizontalAlignment="Center"></Label>
        <TextBox Width="300" AcceptsReturn="True" TextWrapping="Wrap"
                 Text="{Binding Path=Result, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

    </StackPanel>
</Window>
