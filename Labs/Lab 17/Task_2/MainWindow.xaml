<Window x:Class="Task_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Enter n:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
        <TextBox x:Name="nTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="50,0,0,0"/>

        <Label Content="Enter a:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox x:Name="aTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="50,30,0,0"/>

        <Label Content="Enter b:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <TextBox x:Name="bTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="50,60,0,0"/>

        <Button Content="Generate Random Array" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="0,90,0,0" Click="GenerateRandomArray_Click"/>
        
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="150" Margin="0,120,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
